<mujoco model="panda scene">
  <include file="mjx_panda.xml"/>

  <statistic center="0.3 0 0.4" extent="1"/>

  <option timestep="0.005" iterations="5" ls_iterations="8" integrator="implicitfast">
    <flag eulerdamp="disable"/>
  </option>

  <custom>
    <numeric data="12" name="max_contact_points"/>
  </custom>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="120" elevation="-20"/>
    <scale contactwidth="0.075" contactheight="0.025" forcewidth="0.05" com="0.05" framewidth="0.01" framelength="0.2"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.4314 0.5294 0.6431" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.4314 0.5294 0.6431" rgb2="0.8157 0.8549 0.9059"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>

    <material name="Transport" rgba="0 1 0 0"/>
    <texture type="2d" file="small_meta_table_diffuse.png"/>
    <material name="table" texture="small_meta_table_diffuse"/>
    <!-- 桌子 (length x width x height in meters): 1.21x0.76x0.75 -->
    <mesh file="tablelegs.obj"/>
    <mesh file="tabletop.obj"/>

    <!-- 箭头mesh -->
    <mesh name="arrow_cone" file="cone.stl" scale="0.001 0.001 0.001"/>

  </asset>

  <worldbody>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane" contype="1" pos="0 0 -0.75"/>

    <!-- 桌子 -->
    <geom mesh="tabletop" material="table" class="visual" pos="0.3 0 -0.75" quat="1 0 0 1"/>
    <geom mesh="tablelegs" material="table" class="visual" pos="0.3 0 -0.75" quat="1 0 0 1"/>
    <geom name="table"  size="0.6 0.37 0.02" type="box"  material="Transport" pos="0.30 0 -0.02" />

    <!-- 立方体 -->
    <body name="free_cube">
        <freejoint/>
        <geom name="cube" type="box" size="0.02 0.02 0.02" pos="0.5 0 0.01" rgba="1 0 0 1"/>
    </body>

    <!-- 可视化坐标轴 -->
    <body name="control_frame" pos="0.5 0 0.5">
        <freejoint/>
        <geom contype="0" conaffinity="0"  group="1" type="cylinder" size="0.012" 
              fromto="0 0 0  0.08 0 0" rgba="0.8 0 0 1"/>
        <geom name="arrow_head_x" type="mesh" mesh="arrow_cone" 
            pos="0.08 -0.1 0.031" quat="0.707107 0 0.707107 0"
           rgba="0.8 0 0 1" contype="0" conaffinity="0"/>

        <geom contype="0" conaffinity="0"  group="1" type="cylinder" size="0.012" 
              fromto="0 0 0  0 0.08 0" rgba="0 0.8 0 1"/>
        <geom contype="0" conaffinity="0"  group="1" type="sphere" size="0.012 0" 
              fromto="0 0.08 0  0 0.1 0" rgba="0 0.8 0 1"/>
        <geom name="arrow_head_y" type="mesh" mesh="arrow_cone" 
            pos="-0.0295 0.08 0.102" quat="-0.707107 0.707107 0.0 0.0"
           rgba="0 0.8 0 1" contype="0" conaffinity="0"/>

        <geom contype="0" conaffinity="0"  group="1" type="cylinder" size="0.012" 
              fromto="0 0 0  0 0 0.08" rgba="0 0 0.8 1"/>
        <geom name="arrow_head_z" type="mesh" mesh="arrow_cone" 
            pos="-0.0295 -0.1 0.08" 
           rgba="0 0 0.8 1" contype="0" conaffinity="0"/>

        <geom contype="0" conaffinity="0"  group="1" type="sphere" size="0.004" pos="0 0 0" rgba="0.5 0.5 0.5 1"/>
    </body>
  </worldbody>
</mujoco>
